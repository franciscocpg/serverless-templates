{
  "name": "aws-nodejs-typescript",
  "version": "1.0.0",
  "description": "Serverless webpack template using Typescript",
  "scripts": {
    "lint": "tsc --skipLibCheck --noEmit && tslint 'src/**/*.ts'",
    "test": "echo 'Running unit tests' && yarn --silent unit-tests",
    "unit-tests": "LOG_LEVEL=off jest unit --coverage && echo \"Coverage report generated at file://$(pwd)/coverage/lcov-report/index.html\""
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/?(*.)(spec|test).ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "disableSourceMapSupport": true
      }
    }
  },
  "dependencies": {
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.39",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.5",
    "jest": "^24.9.0",
    "serverless": "1.60.5",
    "serverless-offline": "^5.12.1",
    "serverless-webpack": "^5.3.1",
    "ts-jest": "^24.3.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.7.4",
    "webpack": "^4.41.5"
  },
  "author": "Francisco Guimar√£es",
  "license": "MIT"
}
